body{height: 100%}
.index{position:fixed;bottom: 0;width: 100%;height: 40px;background:gainsboro;z-index: 10000}
.index li{width: 24%;float: left;padding: 1px;text-align: center}
.key{background: #26a1ff;color: white}
.index li p{width: 100%;float: left;font-size: 10px;}
.index li p image{width: 20px;height: 20px}
.page-section image{width: 96%;height: 150px; }
.head{background: #26a1ff;height: 30px;width: 100%;text-align: center;color: white;line-height: 30px;font-style: bold;position: fixed;top:0;z-index:1000}
.page-section{height: 150px;text-align: center}
.swiper{width: 100%;height: 25px;margin-top: 30px;}
.find{width: 25%;float: left;height: 20px;text-align: center;line-height: 20px;font-size: 10px;color: black;border:white solid 1px;background: white;border-radius: 0px;}
button:hover{color: #26a1ff;font-size: 11px;}
.ip{margin-top: -5px;padding-left: 10px;margin-left: 10px;height: 32px;margin-top: 10px;width: 100%}
.ip input{z-index:1000;margin-top:-18px;width:80%;border: #26a1ff solid 1px;text-align: left;border-radius: 10px;padding-left:32px;}
.search{width:18px;height: 18px;top:7px;margin-left: 10px;position: relative}
.search image{width: 50px;}
.head_title{width: 3px;height: 30px;background: #26a1ff;margin-left: 5px;float:left;margin-top: 5px;}
.title{width: 94%;float: right;margin-top: 14px;font-size: 12px;color: #26a1ff;}
.title_bg{height: 120px;}
.more{height: 20px;width: 100%;text-align: center;font-size: 12px;margin-top: 80px;background: #dfdfdf;width: 96%;margin-left: 5px;}
.recom{width: 100%;padding-left: 10px;padding-right: 20px;}
.recom view{width: 30%;float: left;text-align: center;height: 50px;font-size:14px;margin-top: 10px;margin-left: 8px;line-height: 50px;border-radius: 3px;box-shadow: #dfdfdf 1px 1px 5px;}
.recom view:hover{background: #26a1ff;color: white}
.black{height: 20px;width: 100%;margin-top: 30px;}
